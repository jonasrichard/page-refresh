{
    "name": "Page refresh",
    "version": "0.1",
    "description": "Reload tabs",
    "permissions": ["activeTab", "alarms", "debugger", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/refresh-128.png"
        }
    },
    "icons": {
        "128": "images/refresh-128.png"
    },
    "manifest_version": 2
}
